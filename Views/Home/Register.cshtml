@{
    ViewBag.Title = "Registration Page";
}

<div class="container py-5">
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-6 mx-auto">
                    <div class="card border-secondary">
                        <div class="card-header"style="background-color:cadetblue">
                            <h3 class="mb-0 my-2" style="text-align:center;">Registration Form</h3>
                        </div>
                        <div class="card-body" style="background-color:lightblue">
                            @*<form class="form" role="form" autocomplete="off">*@
                            <div class="form-group">
                                @*<img id="userImage" class="img-thumbnail rounded-circle" src="~/Images/chat.png" />*@
                                @*<div id="userImage" style="height:150px; width:150px; border-radius:50%; background-color:burlywood; background-position:center; background-size:cover;"></div>*@
                                <br />
                                <div class="custom-file">
                                    <input type="file" class="custom-file-input" id="validatedCustomFile" required>
                                    <label class="custom-file-label" id="lblValidatedCustomFile" for="validatedCustomFile">Choose photo...</label>
                                    <div class="invalid-feedback">Example invalid custom file feedback</div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="form-inline">
                                    <label for="name" class="col-md-3" style="justify-content:flex-start;">Name:</label>
                                    <input type="text" class="form-control col-md-9" id="name" name="name" >
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="form-inline">
                                    <label for="email" class="col-md-3" style="justify-content:flex-start;">Email:</label>
                                    <input type="email" class="form-control col-md-9" id="email" name="email"  required="">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="form-inline">
                                    <label for="password" class="col-md-3" style="justify-content:flex-start;">Password:</label>
                                    <input type="password" class="form-control col-md-9" id="password" name="password"  title="At least 6 characters with letters and numbers" required="">
                                </div>
                            </div>
                            @*</form>*@
                        </div>
                        <div class="card-footer">
                            @*<div class="form-inline">*@
                            <span id="userMessage" name="userMessage" class="text-danger float-left"></span>
                            <button type="submit" id="register" name="register" class="btn btn-success float-right">Submit</button>
                            @*</div>*@
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>